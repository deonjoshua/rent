<div class="container">
  <div class="listing-card">
    <h2>Your Listing</h2>
    <h2><%= @tools.length %> item in total</h2>
    <div class="row " id="tool_listing">
      <% @tools.each do |t| %>
      <div class="card">
        <div class="tool-row d-flex" style="text-align:center;" >
          <div class="mylisting-img">
            <%= cl_image_tag t.image.key, height: 200, width:200,
             crop: :scale %>
          </div>
          <div class="mylist-description ml-3" style="text-align:center;">
            <h4><%= t.name %></h4>
            <h3>Status: </h3>
            <%=link_to "View",  tool_path(t.id), class: "btn btn-flat" %>
            <%=link_to "Update",  edit_tool_path(t.id), class: "btn btn-flat update" %>
          </div>
          <%= link_to icon('fa-solid fa-trash', class:'fa-shake'), tool_path(t.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this tool?" } %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
