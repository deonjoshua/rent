

<div class="container mt-3">
  <div class="row">
    <div class="col-12" id="tool-category">
      <h1>Home Improvement Tools</h1>
    </div>
  </div>

<div class="container mt-5">
  <div class="row">
    <% @tools.each do|b| %>
      <div class="card" style="width: 20rem;height:30rem">
          <%= cl_image_tag b.image.key, height: 150, width: 300, crop: :fill %>
          <div class="card-body">
            <h5><strong><%= link_to b.name, tool_path(b.id) %></strong></h5>
            <p> $<%= b.rate %>/day</p>
            <p> <%= b.description%></p>
          </div>
        </div>
    <% end %>
  </div>
</div>
